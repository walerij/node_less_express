<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
            <input placeholder="Название курса" id="title" name="title" type="text" class="validate" required>
            <label for="title">Название курса</label>
            <span class="helper-text" data-error="Введите корректное наименование" ></span>
    </div>

    <div class="input-field">
            <input  id="price" name="price" type="number" class="validate" required min="1">
            <label for="price">Цена курса</label>
            <span class="helper-text" data-error="Введите цену" ></span>
    </div>

    <div class="input-field">
            <input  id="img" name="img" type="text" class="validate" required>
            <label for="img">URL Изображения</label>
            <span class="helper-text" data-error="Введите корректный URL" ></span>
    </div>
    <button class="btn btn-primary" type="submit">Добавить курс</button>
</form>