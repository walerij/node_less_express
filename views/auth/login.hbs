<div class="auth">
    <div class="row">
        <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#login" class="active">Войти</a></li>
            <li class="tab col s6"><a href="#register">Регистрация</a></li>
    
        </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <form action="/auth/login" method="POST">
                <h2>Войти в магазин</h2>
                <div class="input-field">
                        <input name="email" id="email" type="email" class="validate" required>
                        <label for="email">Email</label>
                        <span class="helper-text" data-error="Введите корректный email" ></span>
                </div>

                <div class="input-field">
                        <input  id="password" name="password" type="password" class="validate" required >
                        <label for="password">Пароль</label>
                        <span class="helper-text" data-error="Введите верный пароль" ></span>
                </div>


                <button class="btn btn-primary" type="submit">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3 ">
            <h2>Создать аккаунт</h2>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                        <input name="email" id="remail" type="email" class="validate" required>
                        <label for="remail">Email</label>
                        <span class="helper-text" data-error="Введите корректный email" ></span>
                </div>

                <div class="input-field">
                        <input  id="rpassword" name="password" type="password" class="validate" required >
                        <label for="rpassword">Пароль</label>
                        <span class="helper-text" data-error="Введите верный пароль" ></span>
                </div>
                <div class="input-field">
                        <input  id="confirm" name="confirm" type="password" class="validate" required >
                        <label for="confirm">Повторите ввод пароля</label>
                        <span class="helper-text" data-error="Пароли не совпадают" ></span>
                </div>

                <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
                
            </form>
        </div>

    </div>

</div>

