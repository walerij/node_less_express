<h1>Редактировать курс {{course.title}} </h1>

<form action="/courses/edit" method="POST">
<div class="input-field">
          <input placeholder="Название курса" id="title" name="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Название курса</label>
          <span class="helper-text" data-error="Введите корректное наименование" ></span>
</div>

<div class="input-field">
          <input  id="price" name="price" type="number" class="validate" required value="{{course.price}}" min="1">
          <label for="price">Цена курса</label>
          <span class="helper-text" data-error="Введите цену" ></span>
</div>

<div class="input-field">
          <input  id="img" name="img" type="text" class="validate" required  value="{{course.img}}">
          <label for="img">URL Изображения</label>
          <span class="helper-text" data-error="Введите корректный URL" ></span>
</div>
<input type="hidden" name='id' value="{{course._id}}">
<button class="btn btn-primary" type="submit">Редактировать курс</button>
</form>